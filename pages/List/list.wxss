/* pages/List/list.wxss */
.list_page{
  position: relative;
  height:100%;
  width:100%;
  display: flex;
  flex-direction: column;
}

/* 列表容器 */
.list_container{
  display: flex;
  flex-direction: column;
  padding:20rpx 40rpx;
}

.list_box{
  display: flex;
  flex-direction: column;
}

.list_date{
  position: relative;
  padding:40rpx 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list_date .divider{
  height:1px;
  background-color:rgba(45, 52, 54,.3);
}
.list_date .date{
  position: absolute;
  background-color:#fff;
  padding:0rpx 20rpx;
  left:50%;
  top:50%;
  transform:translate(-50%, -50%);
  color:rgba(45, 52, 54,.7);
  font-size:22rpx;
}

.list_container .list_item{
  display: flex;
  margin-bottom:40rpx;
  border-radius:0rpx 10rpx 10rpx 0rpx;
  background-color:rgba(236, 240, 241,.3);
}

.list_item image{
  width:250rpx;
  border-radius:0rpx 10rpx 10rpx 0rpx;
}

.list_item  .list_item_info{
  display: flex;
  flex-direction: column;
  padding:15rpx;
}



/* 导航 */
.home_navigation{
  position: absolute;
  bottom:50rpx;
  left:50%;
  transform: translateX(-50%)
}