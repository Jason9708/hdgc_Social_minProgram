/* pages/Detail/detail.wxss */
.detail_page{
  position: relative;
  height:100%;
  display: flex;
  flex-direction: column;
  padding:20rpx;
}

.detail_page image{
  width: 100%;
  border-radius:10rpx;
  height:400rpx;
  overflow: auto;
}

.detail_page .detail_info{
  display:flex;
  justify-content: space-between;
  padding:20rpx;
  border-bottom:2px solid rgba(178,186,194,.15);
}

.detail_page .detail_info .info_left{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info_right{
  display: flex;
  align-items: center;
}

.info_right image{
  width:100rpx;
  height:100rpx;
  padding-left:30rpx;
  border-radius:0rpx;
  border-left: 2px solid rgba(178,186,194,.15);
}


